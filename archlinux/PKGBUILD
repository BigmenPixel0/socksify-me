pkgname=socksify-me
pkgver=0.3.5
pkgrel=1
pkgdesc="A simple script that socksifies your traffic"
arch=('any')
url="https://github.com/BigmenPixel0/socksify-me"
license=('GPL3')
source=("${pkgname}-${pkgver}.tar.gz::${url}/archive/${pkgver}.tar.gz")
depends=('iproute2' 'tun2socks')
optdepends=('badvpn: optional badvpn-tun2socks backend support')
sha512sums=('0e2780b5aa9e8e3e7e4fa02e8ecf4169e40889cdd5536994a77a7b4db213d56db6aa0dc6ec3db4a84fab35ee1a0fc083c410949f7a1dcaada621cdf6466a9b42')

package() {
    cd ${srcdir}/${pkgname}-${pkgver}
    install -Dm755 ${pkgname} ${pkgdir}/usr/bin/${pkgname}
    install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
