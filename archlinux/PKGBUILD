pkgname=socksify-me
pkgver=0.3.3
pkgrel=1
pkgdesc="A simple script that socksifies your traffic"
arch=('any')
url="https://github.com/BigmenPixel0/socksify-me"
license=('GPL3')
source=("${pkgname}-${pkgver}.tar.gz::${url}/archive/${pkgver}.tar.gz")
depends=('iproute2' 'tun2socks')
sha512sums=('105605aa10a292c5e7b759b05b2a549d4c8595eeeddc05168992c1e41fb3f7771450b81ebf7a09383e5c3c4f32be36e13d8a528b0f5b6b22d6dffbdc24f84026')

package() {
    cd ${srcdir}/${pkgname}-${pkgver}
    install -Dm755 ${pkgname} ${pkgdir}/usr/bin/${pkgname}
    install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
