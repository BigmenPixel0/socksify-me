pkgname=socksify-me
pkgver=0.3.1
pkgrel=1
pkgdesc="A simple script that socksifies your traffic"
arch=('any')
url="https://github.com/BigmenPixel0/socksify-me"
license=('GPL3')
source=("${pkgname}-${pkgver}.tar.gz::${url}/archive/${pkgver}.tar.gz")
depends=("iproute2" "tun2socks")
sha512sums=('2a2635fcea97c4fe98b01b22ff6789d301a38684f6ccc2ed25649ef88be50074c1febf1f3fd3c088c7f1758c0469b906c0e4395e8218b7d30fe8617c290b3966')

package() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    install -Dm755 ${pkgname} ${pkgdir}/usr/bin/${pkgname}
}
