pkgname=socksify-me
pkgver=0.3.2
pkgrel=2
pkgdesc="A simple script that socksifies your traffic"
arch=('any')
url="https://github.com/BigmenPixel0/socksify-me"
license=('GPL3')
source=("${pkgname}-${pkgver}.tar.gz::${url}/archive/${pkgver}.tar.gz")
depends=('iproute2' 'tun2socks')
sha512sums=('84f07790c4de42b9e336bc9436c67fd0757bd2ee4a6f21cc4d45a41eec3d0ddfe75d71b7e88d7b3504252608ef5e79e2172fcb606ab6abea05eca8ced4d28931')

package() {
    cd ${srcdir}/${pkgname}-${pkgver}
    install -Dm755 ${pkgname} ${pkgdir}/usr/bin/${pkgname}
    install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
